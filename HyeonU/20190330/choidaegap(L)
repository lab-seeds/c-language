#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){
	int arr[9][9];
	srand((unsigned)time(NULL));
	int i, j;
	for(i = 0; i < 9; i++){
		for(j = 0; j < 9; j++){
			arr[i][j] = rand()%101;
		}
	}
	int max = 0;
	int cnt = 0;
	int l[81] = {0}, c[81] = {0};
	int del;
	for(i = 0; i < 9; i++){
		for(j = 0; j < 9; j++){
			if(arr[i][j]>max){
				cnt = 0;
				max = arr[i][j];
				for(del = 0; del< 81; del++){
					l[del] = 0;
					c[del] = 0;
				}
				l[cnt] = i;
				c[cnt] = j;
				cnt++;
			}
			else if(arr[i][j] == max){
				l[cnt] = i;
				c[cnt] = j;
				cnt ++;
			}
		}
	}
	printf("최댓값 = %d\n", max);
	printf("위치 = \n");
	for(cnt = 0;(c[cnt]) && (l[cnt]);cnt++){
		printf("%d     %d\n",l[cnt],c[cnt]);
	}
	printf("\n\n");
	for(i = 0; i < 9; i++){
		for(j = 0; j < 9; j++){
			printf("%d     a",arr[i][j]);
		}
		printf("\n\n");
	}
	return 0;
}
