#include<stdio.h>

int main(){
	int a[5][5] = {0};
	int v = 0;
	int r = 0,c;
	int len = 1;
	int pos = 2;
	do{
		c = pos;
		do{
			v++;
			a[r][c] = v;
			c++;
			
		}while(c<len+1);
		r++;
		len+=2;
		pos--;
	}while(r<3);
	len-=3;
	pos++;
	do{
		len--;
		pos++;
		c = pos;
		
		do{
			v++;
			a[r][c] = v;
			c++;
		}while(c<len);
		r++;
		
		
	}while(r<5);
	int i,j;
	for(i=0;i<5;i++){
		for(j=0;j<5;j++){
			if(a[i][j] != 0){
			printf("%d ",a[i][j]);
		}
		else
		printf("  ");
		}
		printf("\n");
	}
	return 0;
}
